<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playgroundlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tambolaonline.main.TambolaPlayGroundActivity">


    <LinearLayout
        android:id="@+id/tambola_board_layout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="fill"
        />

        <LinearLayout
            android:id="@+id/tambola_number_layout"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/txt_listofnums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"

                android:layout_gravity="center_horizontal"
                />
            <TextView
              android:id="@+id/txt_currentnumber"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="55dp"
              android:layout_gravity="center_horizontal"
                />
            <ImageButton
                android:id="@+id/btn_generaterandnumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_baseline_play_circle_outline_24"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                android:onClick="nextRandomNumber"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/tambola_announcements_layout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        app:iconTint="@color/bottomnav_iconcolor"
        app:itemTextColor="@color/bottomnav_iconcolor"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>