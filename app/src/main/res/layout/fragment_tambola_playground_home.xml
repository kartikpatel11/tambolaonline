<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tambolaonline.main.TambolaPlaygroundHomeFragment">

    <LinearLayout
        android:id="@+id/tambola_board_layout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="fill"
        />

    <LinearLayout
        android:id="@+id/tambola_number_layout"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/txt_listofnums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txt_currentnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            android:layout_gravity="center_horizontal"
            />
        <ImageButton
            android:id="@+id/btn_generaterandnumber"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_play_circle_filled_accent_24"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:onClick="nextRandomNumber"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

    </LinearLayout>



</LinearLayout>